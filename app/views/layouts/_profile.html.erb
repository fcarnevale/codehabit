<div id="profile-pic-main">
  <a href="https://en.gravatar.com/" target="_blank" title="change your avatar image at gravatar.com">
  	<%= gravatar_for current_user %>
  </a>
</div>

<div id="profile-info">
  <% if current_user.name %>
  <p><strong><%= current_user.name %></strong></p>
  <% end %>
  <p><%= current_user.username %></p>
</div>

<div id="checkin-stats">
  <p>your total check-ins: <span id="checkin-count">
    <%= current_user.checkins.count %></span></p>
  <p>your current code streak: <span id="streak-count">
    <%= pluralize(current_user.current_streak, 'day') %>!</span></p>
</div>